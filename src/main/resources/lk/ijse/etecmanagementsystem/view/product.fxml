                     <font>
                        <Font name="System Italic" size="12.0" />
                     </font>
                  </TextField>
               </children>
            </HBox>
            
            <Separator prefWidth="200.0">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Separator>

            <VBox alignment="CENTER" spacing="10.0">
               <children>
                  <Button fx:id="btnAdd" mnemonicParsing="false" prefHeight="35.0" prefWidth="280.0" style="-fx-background-color: #27ae60;" text="Save Product" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                     <cursor>
                         </cursor>
                  </Button>
                  <HBox alignment="CENTER" spacing="10.0">
                     <children>
                        <Button fx:id="btnUpdate" mnemonicParsing="false" prefHeight="30.0" prefWidth="135.0" style="-fx-background-color: #f39c12;" text="Update" textFill="WHITE">
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font>
                        </Button>
                        <Button fx:id="btnDelete" mnemonicParsing="false" prefHeight="30.0" prefWidth="135.0" style="-fx-background-color: #c0392b;" text="Delete" textFill="WHITE">
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font>
                        </Button>
                     </children>
                  </HBox>
                  <Button fx:id="btnClear" mnemonicParsing="false" prefWidth="280.0" style="-fx-background-color: #95a5a6;" text="Clear Form" textFill="WHITE" />
