<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="720.0" prefWidth="1000.0" style="-fx-background-color: #f3f4f6;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.etecmanagementsystem.controller.SuppliersController">

    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="1000.0" style="-fx-background-color: #2c3e50;" BorderPane.alignment="CENTER">
            <children>
                <Label text="Supplier Management" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>
                <Region HBox.hgrow="ALWAYS" />
                <Label text="Manage your vendors and partners" textFill="#a1c8ff">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                </Label>
            </children>
            <padding>
                <Insets left="30.0" right="30.0" />
            </padding>
        </HBox>
    </top>

    <center>
        <HBox spacing="10.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <children>

                <VBox prefHeight="600.0" prefWidth="350.0" spacing="10.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 10, 0, 0, 0);">
                    <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                    </padding>
                    <children>
                        <Label text="Supplier Details" textFill="#3b82f6">
                            <font>
                                <Font name="System Bold" size="16.0" />
                            </font>
                            <VBox.margin>
                                <Insets bottom="10.0" />
                            </VBox.margin>
                        </Label>
                  <VBox spacing="5.0">
                     <children>
                        <Label text="Search by ID" textFill="#8a8a8a">
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font>
                        </Label>
                        <TextField fx:id="txtSearchByID" onKeyPressed="#handleEnterNav" promptText="ðŸ” Search by ID" style="-fx-background-color: white; -fx-border-color: transparent transparent #3b82f6 transparent; -fx-border-radius: 0;" />
                     </children>
                  </VBox>

                        <VBox spacing="5.0">
                            <children>
                                <Label text="Supplier ID" textFill="#64748b">
                                    <font>
                                        <Font name="System Bold" size="12.0" />
                                    </font>
                                </Label>
                                <TextField fx:id="txtId" editable="false" promptText="Auto-Generated" style="-fx-background-color: #f1f5f9; -fx-border-color: #e2e8f0; -fx-border-radius: 5;" />
                            </children>
                        </VBox>

                        <VBox spacing="5.0">
                            <children>
                                <Label text="Company / Supplier Name" textFill="#64748b">
                                    <font>
                                        <Font name="System Bold" size="12.0" />
                                    </font>
                                </Label>
                                <TextField fx:id="txtName" promptText="e.g. Apex Distributors" style="-fx-background-color: white; -fx-border-color: #cbd5e1; -fx-border-radius: 5; -fx-padding: 8;" />
                            </children>
                        </VBox>

                        <VBox spacing="5.0">
                            <children>
                                <Label text="Contact Number" textFill="#64748b">
                                    <font>
                                        <Font name="System Bold" size="12.0" />
                                    </font>
                                </Label>
                                <TextField fx:id="txtContact" promptText="e.g. 077-1234567" style="-fx-background-color: white; -fx-border-color: #cbd5e1; -fx-border-radius: 5; -fx-padding: 8;" />
                            </children>
                        </VBox>

                        <VBox spacing="5.0">
                            <children>
                                <Label text="Email Address (Optional)" textFill="#64748b">
                                    <font>
                                        <Font name="System Bold" size="12.0" />
                                    </font>
                                </Label>
                                <TextField fx:id="txtEmail" promptText="sales@apex.com" style="-fx-background-color: white; -fx-border-color: #cbd5e1; -fx-border-radius: 5; -fx-padding: 8;" />
                            </children>
                        </VBox>

                        <VBox spacing="5.0">
                            <children>
                                <Label text="Address" textFill="#64748b">
                                    <font>
                                        <Font name="System Bold" size="12.0" />
                                    </font>
                                </Label>
                                <TextField fx:id="txtAddress" alignment="TOP_LEFT" prefHeight="65.0" prefWidth="273.0" promptText="City, Street" style="-fx-background-color: white; -fx-border-color: #cbd5e1; -fx-border-radius: 5; -fx-padding: 8;" />
                            </children>
                        </VBox>

                        <VBox spacing="10.0">
                            <VBox.margin>
                                <Insets top="20.0" />
                            </VBox.margin>
                            <children>
                                <Button fx:id="btnSave" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleSave" prefHeight="40.0" style="-fx-background-color: #3b82f6; -fx-cursor: hand;" text="Save Supplier" textFill="WHITE">
                                    <font>
                                        <Font name="System Bold" size="14.0" />
                                    </font>
                                    <effect>
                                        <DropShadow color="#3b82f64d" offsetY="3.0" />
                                    </effect>
                                </Button>

                                <HBox spacing="10.0">
                                    <children>
                                        <Button fx:id="btnUpdate" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleUpdate" prefHeight="40.0" style="-fx-background-color: #f39c12; -fx-cursor: hand;" text="Update" textFill="WHITE" HBox.hgrow="ALWAYS">
                                            <font>
                                                <Font name="System Bold" size="14.0" />
                                            </font>
                                        </Button>
                                        <Button fx:id="btnDelete" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleDelete" prefHeight="40.0" style="-fx-background-color: #ef4444; -fx-cursor: hand;" text="Delete" textFill="WHITE" HBox.hgrow="ALWAYS">
                                            <font>
                                                <Font name="System Bold" size="14.0" />
                                            </font>
                                        </Button>
                                    </children>
                                </HBox>

                                <Button fx:id="btnReset" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleReset" style="-fx-background-color: transparent; -fx-text-fill: #64748b; -fx-cursor: hand; -fx-border-color: #cbd5e1; -fx-border-radius: 5;" text="Reset Form" />
                            </children>
                        </VBox>
                    </children>
                </VBox>

                <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                    <children>

                        <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 10;">
                            <children>
                                <TextField fx:id="txtSearch" prefHeight="35.0" promptText="ðŸ” Search by Name or Contact..." style="-fx-background-color: transparent; -fx-border-color: transparent transparent #3b82f6 transparent;" HBox.hgrow="ALWAYS">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                </TextField>
                                <Button mnemonicParsing="false" onAction="#handleSearch" style="-fx-background-color: #3b82f6; -fx-cursor: hand;" text="Search" textFill="WHITE">
                                    <font>
                                        <Font name="System Bold" size="12.0" />
                                    </font>
                                </Button>
                            </children>
                            <effect>
                                <DropShadow color="#0000000d" offsetY="2.0" />
                            </effect>
                        </HBox>

                        <TableView fx:id="tblSuppliers" onMouseClicked="#handleTableClick" style="-fx-background-color: white; -fx-background-radius: 8; -fx-border-color: #e2e8f0; -fx-border-radius: 8;" stylesheets="@../css/SalesTableStyle.css" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="colId" prefWidth="60.0" text="ID" />
                                <TableColumn fx:id="colName" prefWidth="200.0" text="Company Name" />
                                <TableColumn fx:id="colContact" prefWidth="120.0" text="Contact" />
                                <TableColumn fx:id="colEmail" prefWidth="180.0" text="Email" />
                                <TableColumn fx:id="colAddress" prefWidth="150.0" text="Address" />
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                        </TableView>
                    </children>
                </VBox>
            </children>
        </HBox>
    </center>
</BorderPane>
