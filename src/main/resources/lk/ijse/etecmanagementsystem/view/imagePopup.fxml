            <HBox alignment="CENTER" prefHeight="340.0" prefWidth="340.0">
               <children>
                  <Pane fx:id="paneImageBack" prefHeight="340.0" prefWidth="340.0" style="-fx-background-color: WHITE;" visible="false" />
               </children>
            </HBox>
            <ImageView fx:id="imgPreview" fitHeight="340.0" fitWidth="340.0" pickOnBounds="true" />
