                        <Label prefHeight="43.0" prefWidth="44.0" text="Img" textFill="#bdc3c7">
                           <font>
                              <Font size="10.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
                  <Button fx:id="btnOpenImagePopup" mnemonicParsing="false" prefHeight="25.0" prefWidth="108.0" style="-fx-background-color: #34495e;" text="Choose Image..." textFill="WHITE" />
