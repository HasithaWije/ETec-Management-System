                  <Font name="System Bold" size="12.0" />
               </font>
            </Button>
            <Button fx:id="btnCancel" mnemonicParsing="false" onAction="#handleBtnCancel" prefHeight="30.0" prefWidth="80.0" style="-fx-background-color: #7f8c8d;" text="Cancel" textFill="WHITE" />
         </children>
      </HBox>
   </bottom>
